<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bestenlisteholz"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/header_title"
                        android:layout_width="match_parent"
                        android:background="@drawable/holzschildgruen"
                        android:layout_height="140dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/finkheavy_regular"
                            android:textColor="#61400c"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="30dp"
                            android:textSize="27dp"
                            android:text="Bitte Broker IP-Adresse und Port einstellen:" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/auswahl_feld"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/auswahl_broker"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_IP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/finkheavy_regular"
                                    android:textColor="#FFFF"
                                    android:textSize="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:text="IP-Adresse:" />

                                <EditText
                                    android:id="@+id/edit_IPAdresse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/finkheavy_regular"
                                    android:textColor="#FFFF"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:text="" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/auswahl_port"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/label_port"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/finkheavy_regular"
                                    android:textColor="#FFFF"
                                    android:textSize="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:text="Port:" />

                                <EditText
                                    android:id="@+id/edit_port"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textSize="20dp"
                                    android:fontFamily="@font/finkheavy_regular"
                                    android:textColor="#FFFF"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginRight="50dp"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:text="" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bestaetigung_btn"
                        android:layout_width="300dp"
                        android:layout_height="190dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_speichern"
                            android:layout_width="400dp"
                            android:background="@drawable/holzschildbutton"
                            android:fontFamily="@font/finkheavy_regular"
                            android:textColor="#61400c"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:padding="20dp"
                            android:textSize="25dp"
                            android:text="Speichern" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>